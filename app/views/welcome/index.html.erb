<div class="jumbotron">
	<div class="container">
     <div class="row">
	<div class="col-md-6 ">
  <h1><em>Hello Rails!</em></h1>
  
<p>This Is a Ruby On Rails Application.</p>

<a class="btn btn-primary btn-sm" href="<%= articles_path %>" role="button">My Blog</a>

</div>

<div class="col-md-6">
	<h3>Join Now <i class="fa fa-user"></i> </h3>
	<p class="text-muted">Fill The Following Details.</p>
	<%= form_for :user, :url => users_path do |f| %>
  <p>
    <%= f.text_field :username ,class: "form-control" ,:placeholder => "Username",required: true %>
  </p>
 <p>
    <%= f.text_field :email, class: "form-control",:placeholder => "Email" %>
  </p>
  <p>
    <%= f.password_field :password, class: "form-control",:placeholder => "Password" %>
  </p>
  <p>
    <%= f.password_field :password_confirmation, class: "form-control",:placeholder => "Confirm Password" %>
  </p>
  <p>
    <%= f.submit("Sign Up Now",class: "btn btn-primary btn-sm") %>
  </p>
<% end %>

</div>


</div>
</div>
</div>
